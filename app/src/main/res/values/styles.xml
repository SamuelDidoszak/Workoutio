<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="emptyPopup" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:width">@dimen/match_parent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:layout_margin">0px</item>
        <item name="android:title">0px</item>
    </style>

    <style name="emptyPopupFullScreen" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:width">@dimen/match_parent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:layout_margin">0px</item>
        <item name="android:title">0px</item>

        <item name="background">@color/transparentBlack</item>
        <item name="android:background">@color/transparentBlack</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:colorBackground">@color/transparentBlack</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="calendarPopup" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:layout_margin">0px</item>
        <item name="android:title">0px</item>
    </style>

    <style name="timePicker" parent="Theme.MaterialComponents.Dialog">
        <item name="android:background">@color/hardDark</item>
        <item name="actionBarTheme">@style/Theme.AppCompat.NoActionBar</item>
        <item name="android:actionBarSize">0dp</item>
        <item name="android:headerBackground">@color/hardDark</item>
        <item name="colorAccent">@android:color/holo_blue_dark</item>
    </style>



</resources>