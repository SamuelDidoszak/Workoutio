<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:weightSum="10">

    <include
        android:id="@+id/appToolbar"
        layout="@layout/app_toolbar"/>

   <androidx.fragment.app.FragmentContainerView
       android:id="@+id/workout_activity_primaryFragmentContainer"
       android:name="com/example/workout/fragment/ChronometerFragment"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       android:layout_weight="5"
       class = "com.example.workout.fragment.ChronometerFragment"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/workout_activity_secondaryFragmentContainer"
        android:name="com/example/workout/fragment/CurrentWorkoutFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:weightSum="2"
        class = "com.example.workout.fragment.CurrentWorkoutFragment" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/workout_activity_workoutRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"/>

</LinearLayout>





























