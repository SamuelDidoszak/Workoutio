<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="2dp"
        app:cardBackgroundColor="@color/colorSurfaceElevation0dp"
        app:cardElevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="4dp">

            <HorizontalScrollView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4.5"
                android:scrollbars="none">

                <TextView
                    android:id="@+id/history_row_exercise_details_exerciseNameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.87"
                    android:text="exercise"
                    android:textColor="@android:color/white"
                    android:textSize="18.0sp" />
            </HorizontalScrollView>

            <TextView
                android:id="@+id/history_row_exercise_details_quantityTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:alpha="0.87"
                android:text="6"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18.0sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/history_row_exercise_details_timeTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:alpha="0.87"
                android:paddingEnd="4dp"
                android:text="1:04"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:textSize="18.0sp"
                android:textStyle="italic" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>