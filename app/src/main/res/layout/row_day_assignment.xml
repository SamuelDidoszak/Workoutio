<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/day_assignment_row_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="?colorSurface"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">

        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="12dp"
            android:layout_weight="5.0"
            android:scrollbars="none">

            <TextView
                android:id="@+id/day_assignment_row_exerciseNameTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.87"
                android:text="exercise"
                android:textColor="@android:color/white"
                android:textSize="18.0sp" />
        </HorizontalScrollView>

        <LinearLayout
            android:id="@+id/day_assignment_row_muscleIconContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_weight="4.0"
            android:gravity="left"
            android:orientation="horizontal"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:weightSum="4.0" />

        <ImageButton
            android:id="@+id/day_assignment_row_editImageButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:alpha="0.6"
            android:background="@color/transparentBlack"
            android:src="@drawable/ic_baseline_edit_24" />

        <ImageButton
            android:id="@+id/day_assignment_row_reorderImageButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:alpha="0.6"
            android:background="@color/transparentBlack"
            android:src="@drawable/ic_baseline_reorder_24"
            android:visibility="gone" />
    </LinearLayout>
</androidx.cardview.widget.CardView>