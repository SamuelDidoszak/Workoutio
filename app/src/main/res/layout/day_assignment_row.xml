<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/day_assignment_row_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/hardDark"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/day_assignment_row_exerciseNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_weight="5"
            android:text="exercise"
            android:textColor="@android:color/white"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:id="@+id/day_assignment_row_muscleIconContainer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="horizontal"
            android:layout_marginRight="12dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:gravity="left"
            android:weightSum="4">

        </LinearLayout>

        <ImageButton
            android:id="@+id/day_assignment_row_editImageButton"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/transparentBlack"
            android:src="@drawable/ic_baseline_edit_24"/>

        <ImageButton
            android:id="@+id/day_assignment_row_reorderImageButton"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/transparentBlack"
            android:src="@drawable/ic_baseline_reorder_24"
            android:visibility="gone"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>